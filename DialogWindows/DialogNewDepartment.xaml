<Window x:Class="OrganizationGUI_2.DialogNewDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganizationGUI_2"
        mc:Ignorable="d"
        Title="Создание нового департамента"
		  ResizeMode="CanMinimize" Width="350" Height="120">

	<Window.Resources>
		<Style x:Key="PlainText">
			<Setter Property="TextBlock.Margin" Value="0" />
			<Setter Property="TextBlock.FontSize" Value="16" />
			<Setter Property="TextBlock.FontWeight" Value="Normal" />
		</Style>
	</Window.Resources>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock Text="Введите название нового департамента:" Style="{StaticResource PlainText}" Margin="5,5,5,5"/>
		<TextBox Grid.Row="1" x:Name="tboxDepName" Margin="5,0,5,5"/>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0,5,5">
			<Button Content="Принять" Margin="0,0,5,0" IsDefault="True" Click="Accept_Click"/>
			<Button Content="Выйти" IsCancel="True" />
		</StackPanel>

	</Grid>
</Window>
